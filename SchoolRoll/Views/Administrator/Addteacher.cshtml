@page
@model SchoolRoll.Views.Administrator.AddteacherModel
@{
    Layout = "_AdmLayout";
}
<section class="panel">
    <header class="panel-heading">
        添加教师
    </header>
    <div class="panel-body">
        <div class="form-horizontal " action="#">
            <form action='@Url.Action("AddteacherMethod","Administrator")' method="post">
                <div class="form-group">
                    <label class="control-label col-sm-4">职工号</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tno" value="" placeholder="请输入职工号" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">姓名</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tname" value="" placeholder="请输入姓名" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">性别</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tsex" value="" placeholder="请输入性别" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">出生日期</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tbirthday" value="" placeholder="格式xx-xx-xx" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">年龄</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tage" value="" placeholder="请输入年龄" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">联系电话</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="text" name="Tphone" value="" placeholder="请输入联系电话" />
                        </p>
                    </div>
                </div>                
                <div class="col-sm-6">
                    <button type="submit" style="display:block;margin:0 auto" class="btn btn-primary">添加</button>
                </div>
            </form>
        </div>
    </div>
</section>
