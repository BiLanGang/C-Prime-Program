@page
@model SchoolRoll.Views.Administrator.DelcourseModel
@{
    Layout = "_AdmLayout";
    var courses = ViewBag.courses as List<Course>;
}

<section class="panel">
    <header class="panel-heading">
        全部课程信息
    </header>
   
    <table class="table">
        <thead>
            <tr>
                <form action='@Url.Action("Delcou","Administrator")' method="post">
                    <th>搜索</th>
                    <th>
                        <input type="text" name="Cno" value="" placeholder="请输入课程编码" />
                    </th>
                    <th>
                        <input type="submit" class="btn btn-primary" value="删除" />
                    </th>
                </form>
            </tr>
            <tr>
                <form action='@Url.Action("Delcourse","Administrator")' method="post">
                    <th>选择</th>
                    <th>
                        <input type="text" list="url_list" name="type" placeholder="请选择" />
                        <datalist id="url_list">
                            <option label="通识核心课程" value="通识核心课程" />
                            <option label="专业方向课程" value="专业方向课程" />
                            <option label="专业基础课程" value="专业基础课程" />
                        </datalist>
                    </th>
                    <th>
                        <input type="submit" class="btn btn-primary" value="确定" />
                    </th>
                </form>
            </tr>
            <tr>
                <th>序号</th>
                <th>课程编号</th>
                <th>课程名称</th>
                <th>课程学分</th>
                <th>课程类别</th>
                <th>课程学时</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < courses.Count(); i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@courses[i].Cno</td>
                    <td>@courses[i].Cname</td>
                    <td>@courses[i].Credit</td>
                    <td>@courses[i].Ctype</td>
                    <td>@courses[i].Cperiod</td>
                    <form action='@Url.Action("Delcou","Administrator")' method="post">
                        <td>
                            <input type="text" name="Cno" value=@courses[i].Cno style="display:none" />
                            <input type="submit" class="btn btn-primary" value="删除" />

                        </td>
                    </form>
                </tr>

            }
        </tbody>
    </table>
</section>

