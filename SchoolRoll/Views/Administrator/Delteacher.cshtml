@page
@model SchoolRoll.Views.Administrator.DelteacherModel
@{
    var teachers = ViewBag.teachers as List<Teacher>;
    Layout = "_AdmLayout";
}
<table class="table">
    <thead>
        <tr>
            <th>序号</th>
            <th>职工号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>年龄</th>
            <th>出生日期</th>
            <th>联系电话</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < teachers.Count(); i++)
        {
            <tr>
                <td>@i</td>
                <td>@teachers[i].Tno</td>
                <td>@teachers[i].Tname</td>
                <td>@teachers[i].Tsex</td>
                <td>@teachers[i].Tage</td>
                <td>@teachers[i].Tbirthday</td>
                <td>@teachers[i].Tphone</td>
                
                <form action='@Url.Action("Delteamethod","Administrator")' method="post">
                    <td>
                        <input type="text" name="teacher_id" value="@teachers[i].Tno" style="display:none" />
                        <input type="submit" class="btn btn-primary" value="删除" />

                    </td>
                </form>
            </tr>

        }
    </tbody>
</table>
</section>



