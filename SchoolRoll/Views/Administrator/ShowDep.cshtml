@page
@model SchoolRoll.Views.Administrator.ShowDepModel
@{
    Layout = "_AdmLayout";
    var students = ViewBag.students as List<Student>;
}
<table class="table">
    <thead>
        <tr>
            <th>序号</th>
            <th>学号</th>
            <th>姓名</th>
            <th>性别</th>
            <th>联系电话</th>
            <th>家庭住址</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < students.Count(); i++)
        {
            <tr>
                <td>@i</td>
                <td>@students[i].Sno</td>
                <td>@students[i].Sname</td>
                <td>@students[i].Ssex</td>
                <td>@students[i].Sphone</td>
                <td>@students[i].Saddress</td>
                <form action='@Url.Action("Showstu","Administrator")' method="post">
                    <td>
                        <input type="text" name="Sno" value="@students[i].Sno"style="display:none" />
                        <input type="submit" class="btn btn-primary" value="查看" />

                    </td>
                </form>
            </tr>

        }
    </tbody>
</table>
</section>


