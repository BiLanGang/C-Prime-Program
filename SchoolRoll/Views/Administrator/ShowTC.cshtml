@page
@model SchoolRoll.Views.Administrator.ShowTCModel
@{
    Layout = "_AdmLayout";
    var courses = ViewBag.courses as List<Course>;
    var Tno = ViewBag.Tno as string;
}
<section class="panel">
    <header class="panel-heading">
        授课信息
    </header>
    <table class="table">
        <thead>
            <tr>
                <form action='@Url.Action("AddTCcourse","Administrator")' method="post">
                    <th>添加</th>
                    <th>
                        <input type="text" name="course_id" value="" placeholder="请输入课程编号" />
                        <input type="text" name="Teacher_id" value=@Tno  style="display:none" />
                    </th>
                    <th>
                        <input type="submit" class="btn btn-primary" value="添加" />
                    </th>
                </form>
            </tr>
            <tr>
                <th>课程编号</th>
                <th>课程名</th>
                <th>学分</th>
                <th>学时</th>
                <th>课程操作</th>

            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < courses.Count(); i++)
            {
                <tr>
                    <td>@courses[i].Cno</td>
                    <td>@courses[i].Cname</td>
                    <td>@courses[i].Credit</td>
                    <td>@courses[i].Cperiod</td>
                    <form action='@Url.Action("DelTCcourse","Administrator")' method="post">
                        <td>
                            <input type="text" name="course_id" value=@courses[i].Cno style="display:none" />
                            <input type="text" name="Teacher_id" value=@Tno style="display:none" />
                            <input type="submit" class="btn btn-primary" value="删除" />
                        </td>
                    </form>
                </tr>
            }
        </tbody>
    </table>
</section>