@page
@{
    var student = ViewBag.student as Student;
    Layout = "_StuLayout";
}

<section class="panel">
    <header class="panel-heading">
        个人密码修改 
    </header>
    <div class="panel-body">
        <div class="form-horizontal " action="#">
            <form action="@Url.Action("ChangePaswod","Student")" method="post">
                <input type="text" name="Sno" value=@student.Sno style="display:none" />
                <div class="form-group">
                    <label class="control-label col-sm-4">原密码</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="password" name="Spassword" value="" placeholder="请输入原密码" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">新密码</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="password" name="newpwd" value="" placeholder="请输入新密码" />
                        </p>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4">确认新密码</label>
                    <div class="col-sm-6">
                        <p size="16" class="form-control">
                            <input type="password" name="rcnewpwd" value="" placeholder="请重新输入新密码" />
                        </p>
                    </div>
                </div>
                <div class="col-sm-6">
                    <button type="submit" class="btn btn-primary" style="display:block;margin:0 auto">提交</button>
                </div>
            </form>
        </div>
    </div>
</section>
