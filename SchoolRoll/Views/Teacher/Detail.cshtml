@page
@{
    var teacher = ViewBag.teacher as Teacher;
    Layout = "_TeaLayout";
}
<section class="panel">
    <header class="panel-heading">
        个人基本信息
    </header>
    <div class="panel-body">
        <div class="form-horizontal " action="#">
            <!--date picker start-->
            <div class="form-group">
                <label class="control-label col-sm-4">姓名</label>
                <div class="col-sm-6">
                    <p size="16" class="form-control">@teacher.Tname</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">性别</label>
                <div class="col-sm-6">
                    <p size="16" class="form-control">@teacher.Tsex</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">出生日期</label>
                <div class="col-sm-6">
                    <p size="16" class="form-control">@teacher.Tbirthday</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">年龄</label>
                <div class="col-sm-6">
                    <p size="16" class="form-control">@teacher.Tage</p>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-sm-4">联系电话</label>
                <div class="col-sm-6">
                    <p size="16" class="form-control">@teacher.Tphone</p>
                </div>
            </div>
            <form action="@Url.Action("ChangeInformation","Teacher")" method="post">
                <button type="submit" class="btn btn-primary" style="display:block;margin:0 auto">修改</button>
            </form>
         </div>
    </div>
</section>
